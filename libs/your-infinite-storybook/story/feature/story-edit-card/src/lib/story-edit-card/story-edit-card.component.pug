ng-container(*ngIf='query$ | async as result')
    ng-container(*ngIf='!(loading$ | async); else loadingTemplate')
        ng-container(*ngIf='story')
            your-infinite-storybook-story-ui-story-edit-card(
                [story]='story',
                (storyEditCardSave)='onStoryEditCardSave($event)',
                (storyEditCardDelete)='onStoryEditCardDelete($event)'
            )
                ng-content

    ng-template(#loadingTemplate)
        p loading
