ng-container(*ngIf='query$ | async as result')
    ng-container(*ngIf='!(loading$ | async); else loadingTemplate')
        ng-container(*ngIf='message')
            your-infinite-storybook-message-ui-message-edit-card(
                [message]='message',
                (messageEditCardSave)='onMessageEditCardSave($event)',
                (messageEditCardDelete)='onMessageEditCardDelete($event)'
            )
                ng-content

    ng-template(#loadingTemplate)
        p loading
