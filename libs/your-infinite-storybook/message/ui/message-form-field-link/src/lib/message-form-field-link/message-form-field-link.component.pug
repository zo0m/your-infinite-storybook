mat-form-field
    mat-label {{ placeholder }}

    input(matInput, [hidden]='hasValue()', [value]='getMessageId()', readonly)

    a(*ngIf='hasValue()', [routerLink]='getMessageLink()') {{ getTitle() }}

    div(fxLayout='row', matSuffix)
        mat-icon(*ngIf='loading')
            mat-spinner(diameter='24', strokeWidth='1')
