ng-container(*ngIf='message')
    mat-card
        mat-card-header
            mat-card-title Create Message

        mat-card-content
            p(fxLayout='column')
                mat-form-field
                    mat-label Role
                    input(matInput, [(ngModel)]='message.role')

                mat-form-field
                    mat-label Content
                    input(matInput, [(ngModel)]='message.content')

                your-infinite-storybook-story-feature-story-form-field-select(
                    [(storyId)]='message.storyId',
                    placeholder='Story'
                )

        mat-card-actions
            button(mat-button, (click)='onSubmit()') SUBMIT
            span(fxFlex)
            button(mat-button, (click)='onClear()') CLEAR

        ng-content
